{
  "manifest_version": 3,
  "name": "LinkedIn Connections Dashboard",
  "version": "1.0",
  "description": "Displays your LinkedIn connections.",
  "permissions": [
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}